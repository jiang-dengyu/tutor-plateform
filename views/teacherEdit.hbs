<h1>老師的課程編輯頁</h1>
<hr />
<br>
<div class="row mb-5">
  <form class="form-reserve" action="/teacher/edit/{{course.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-row mb-3">
      <label class="form-label" for="courseName">Course Name</label>
      <input class="form-control" id="courseName" type="text" name="courseName" class="form-control"
        placeholder="Course Name" value="{{course.name}}" required autofocus >
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="style">Course Style</label>
      <input class="form-control" id="style" type="text" name="style" class="form-control" placeholder="Course Style"
        value="{{course.style}}" required autofocus>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="introduction">Course Introduction</label>
      <input class="form-control" id="introduction" type="text" name="introduction" class="form-control" placeholder="Course Introduction"
        value="{{course.introduction}}" required autofocus>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="link">Course Link</label>
      <input class="form-control" id="link" type="text" name="link" class="form-control"
        placeholder="Course Link" value="{{course.link}}" required autofocus>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="image">Course Image</label>
      <input class="form-control" id="image" type="file" class="form-control-file" name="image">
    </div>
    <div class="form-row mb-3">
      <label class="form-label">開課日</label>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="sunday" name="days" value="Sunday">
        <label class="form-check-label" for="sunday">星期日</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="monday" name="days" value="Monday">
        <label class="form-check-label" for="monday">星期一</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="tuesday" name="days" value="Tuesday">
        <label class="form-check-label" for="tuesday">星期二</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="wednesday" name="days" value="Wednesday">
        <label class="form-check-label" for="wednesday">星期三</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="thursday" name="days" value="Thursday">
        <label class="form-check-label" for="thursday">星期四</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="friday" name="days" value="Friday">
        <label class="form-check-label" for="friday">星期五</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="saturday" name="days" value="Saturday">
        <label class="form-check-label" for="saturday">星期六</label>
      </div>
    </div>
    <button class="btn btn-primary btn-block" type="submit">Submit</button>
  </form>
</div>
<hr />


