<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Sign In</h1>
</div>
<form class="form-signin" action="/courses" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="courseName">Course Name</label>
    <input class="form-control" id="courseName" type="text" name="courseName" class="form-control" placeholder="Course Name" required
      autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="Introduction">Introduction</label>
    <textarea class="form-control" id="Introduction" name="text" rows="3" placeholder="Introduction"required autofocus></textarea>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="Style">Style</label>
    <input class="form-control" id="Style" type="text" name="style" class="form-control" placeholder="Style" required
      autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label">開課日</label>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="sunday" name="Sunday">
      <label class="form-check-label" for="sunday">星期日</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="monday" name="Monday">
      <label class="form-check-label" for="monday">星期一</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="tuesday" name="Tuesday">
      <label class="form-check-label" for="tuesday">星期二</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="wednesday" name="Wednesday">
      <label class="form-check-label" for="wednesday">星期三</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="thursday" name="Thursday">
      <label class="form-check-label" for="thursday">星期四</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="friday" name="Friday">
      <label class="form-check-label" for="friday">星期五</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="saturday" name="Saturday">
      <label class="form-check-label" for="saturday">星期六</label>
    </div>
  </div>

  <button class="btn btn-primary btn-block" type="submit">Submit</button>
</form>
