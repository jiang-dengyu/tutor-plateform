<h1>首頁</h1>
<br>

<div class="col-md-4">
  <h4 class="mb-2">尋找課程：</h4>
  <form action="/course/search" method="get">
    <div class="input-group">
      <input type="text" name="keyword" class="form-control" placeholder="輸入課程" aria-label="Restaurant Name..."
        value="{{keyword}}" aria-describedby="search-button">
      <div class="input-group-append">
        <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
      </div>
    </div>
  </form>
</div>
<hr />
<br>
<!--主頁:課程總清單-->
<div class="row mt-3">
  {{#each courses}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/course/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/course/{{this.id}}">
            {{this.name}}
          </a>
        </p>       
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- 分頁 --}}
<nav class="mt-3" aria-label="page navigation">
  <ul class="pagination">
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/home?page={{pagination.prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/home?page={{this}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/home?page={{pagination.next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>